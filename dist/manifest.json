{
  "manifest_version": 2,
  "name": "GitHub Helper",
  "version": "0.0.4",
  "description": "GitHubのプルリクページを少し使いやすくします！",
  "permissions": ["tabs"],

  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
